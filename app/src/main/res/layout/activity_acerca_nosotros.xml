<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cat_color"
    android:orientation="vertical"
    tools:context=".activities.Acerca_nosotros">

    <TextView
        android:id="@+id/txtAcerca"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/acerca_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/txtA_Mision_Vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAcerca"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/text_descripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gabs Shop es una tienda virtual que vende ropa y accesorios de uso femenino. Esta tienda nace a mediados de 2019, y está fundada y dirigida por Ana Gabriela Hernández."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtA_Mision_Vision"
        android:layout_width="363dp"
        android:layout_height="209dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/mision_vision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ima"
        android:layout_width="99dp"
        android:layout_height="164dp"
        android:background="@drawable/gaby"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtA_Mision_Vision"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="383dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtA_Mision_Vision"
        app:layout_constraintVertical_bias="0.939"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Buscanos en nuestras redes sociales:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnOpenFacebook"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="130dp"
                android:backgroundTint="#0A119C"
                android:text="facebook"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnOpenInstagram"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="130dp"
                android:backgroundTint="#EE31DF"
                android:text="instagram"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>